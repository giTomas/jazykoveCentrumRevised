{{#each shortNotices}}
<li class="notice-flex">
	{{#if link}}
	<i class="notice-link">&rsaquo;</i><a class="notice__link" href="{{link}}"> <p class="notice-content">{{notice}}</p></a>
	{{else}}
	<i class="notice-modal">&rsaquo;</i><p data-date="{{date}}" class="notice-content"></i>{{notice}}</p></a>
	{{/if}}
</li>{{/each}}
