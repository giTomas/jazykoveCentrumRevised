mixin language-item(language, href)
  a(href=href)
    .language-item.flex.v-centered.v-start
      .flag-big&attributes(attributes)
      h3.t-center= language
        
mixin course-item(name, href, price, ...items )
  .info-tab.flex
    .info-name.t-center
      h4= name
    .info-description.t-center
      each item in items
        p= item
    .info-price.t-center
      p= price
    .info-container.flex.h-centered
      .btn.info-cta 
        a(href=href) Více
        
        
section
  .container_80.flex.h-centered   
    .grid.flex.h-centered.content-box
      .languages
        h2.headline-first.t-center Jazyky, ktoré vyučujeme 
        .container_100.flex.h-centered
          +language-item('Český jazyk', 'ceskyjazyk.html')(class="cz")
          +language-item('Ruský jazyk', 'ruskyjazyk.html')(class="ru")
          +language-item('Anglický jazyk', 'anglickyjazyk.html')(class="en")
          +language-item('Ruský jazyk', 'anglickyjazyk.html')(class="ru")
          +language-item('Český jazyk', 'anglickyjazyk.html')(class="cz")
          +language-item('Anglický jazyk', 'anglickyjazyk.html')(class="en")
          
    .grid-3.flex.h-centered.content-box
      .news
        h2 Novinky
        ul#news
 
section.news-template   
