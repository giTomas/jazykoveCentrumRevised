mixin language-item(language, href)
  a(href=href)
    .language-item.flex.v-centered
      .flag-big&attributes(attributes)
      h3.flex.h-centered=language
    
mixin news-item(href, news)
  li 
    a(href=href)
      i.fa.fa-angle-right
      =news
