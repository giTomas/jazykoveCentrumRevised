mixin lector-item(name, src, data)
  figure.lector
    img.lector__img( src= src)
    figcaption.lector__caption.lector-slide(data-name= data)= name

mixin lector-itemExt(name, src, data, lectorOf)
  figure.lector
    img.lector__img(src=src)
    figcaption.lector__caption.lector-container(data-name= data)
      h3.lector__name= name
      h4.lector__lectorOf= lectorOf
    
section
  .container_80
    h2.headline2.t-center Lektoři
  .container_80.flex.h-centered.lectors
    +lector-item('Ksenia','../assets/img/ksenia.jpg', 'ksenia'); 
    +lector-itemExt('Ksenia','../assets/img/ksenia.jpg', 'ksenia', 'Lektorka ruského jazyka'); 
    +lector-item('Martin','../assets/img/martin.jpg', 'martin'); 
    +lector-item('Lera','../assets/img/lera.jpg', 'lera'); 
    +lector-item('Jan','../assets/img/jan.jpg', 'jan'); 
    +lector-item('Maria','../assets/img/maria.jpg', 'maria'); 
    +lector-item('Adam','../assets/img/adam.jpg', 'adam'); 
     
