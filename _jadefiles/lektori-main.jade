mixin lector-item(name, src, data)
  figure.lector
    img.lector__img(src=src)
    figcaption.lector__caption.lector-slide(data-name= data)= name
    
mixin lector-itemLec(lectorOf, src, data)
  figure.lector
    img.lector__img(src=src)
    figcaption.lector__caption.lector-lectorOf(data-name= data)= lectorOf

mixin lector-itemExt(name, src, data, lectorOf)
  figure.lector
    img.lector__img(src=src)
    figcaption.lector__caption(data-name= data)
      h3.lector__name= name
      h4.lector__lectorOf= lectorOf
    
